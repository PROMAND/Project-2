<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5dip">

        <RelativeLayout>

            <Button
                android:id="@+id/btnTest"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:focusable="false"
                android:alpha="0"
                android:focusableInTouchMode="false" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginRight="5dip"
                android:background="#E1E1E1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14dp"
                    android:id="@+id/start_time"
                    android:text="12:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14dp"
                    android:id="@+id/end_time"
                    android:text="13:00" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#C2C2C2"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14dp"
                    android:id="@+id/track_title"
                    android:text="100" />
            </LinearLayout>


            <pl.byd.wsg.promand.project1.presentation.helpers.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"

                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="70dip"
                android:src="@drawable/tom_cruise"
                app:border_width="2dp"
                app:border_color="#F23A3A" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginLeft="170dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="Helvetica"
                    android:id="@+id/talk_title"
                    android:text="Placeholder" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:fontFamily="Helvetica"
                    android:id="@+id/speaker_full_name"
                    android:text="Placeholder" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/attending_button"
                    android:text="I'M\nGOING"
                    android:textSize="12dp"
                    android:background="#FFCCCCCC"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </RelativeLayout>
    </TableRow>
</LinearLayout>